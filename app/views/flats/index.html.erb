<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Add a new flat", new_flat_path, class: "nav-link" %>
      </li>
     </ul>
  </div>
</div>

<h3>Simple Airbnb</h3>

<h1>All our flats (<%= @flats.size %>) </h1>

<div class="cards">
  <% @flats.each do |flat| %>
  <div class="card-flat">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
  <div class="card-flat-infos">
    <div>
      <h3><strong><%= flat.name %></strong></h3>
      <p><%= flat.address %></p>
      <i class="fas fa-user-friends"> </i><%= flat.number_of_guests %>
      <i class="fas fa-euro-sign"> </i><%= flat.price_per_night %>
    </div>
  </div>
  <p class="more-info"> <%= link_to 'more info', flat_path(flat.id) %> </p>
</div>
<% end %>
</div>




